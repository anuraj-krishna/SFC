# =============================================================================
# Application Settings
# =============================================================================
PROJECT_NAME=sfc-backend
ENV=local
DEBUG=false
LOG_LEVEL=INFO
API_V1_PREFIX=/api/v1

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://sfc:sfc@localhost:5432/sfc

# =============================================================================
# JWT Authentication
# =============================================================================
SECRET_KEY=change-me-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# OTP Settings
# =============================================================================
OTP_EXPIRE_MINUTES=10
OTP_MAX_ATTEMPTS=3
OTP_MAX_VERIFY_ATTEMPTS=5

# =============================================================================
# Email Provider
# Options: "ses" or "mailgun"
# =============================================================================
EMAIL_PROVIDER=mailgun
MAX_DAILY_EMAILS=100

# =============================================================================
# AWS SES (if EMAIL_PROVIDER=ses)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SES_SENDER_EMAIL=

# =============================================================================
# Mailgun (if EMAIL_PROVIDER=mailgun)
# =============================================================================
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_SENDER_EMAIL=
MAILGUN_SENDER_NAME=Flow

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=["http://localhost:3000"]
